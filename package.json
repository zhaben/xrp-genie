{
  "name": "xrp-genie",
  "version": "1.0.0",
  "description": "XRPL Wallet Boilerplate with CLI for Next.js App Router",
  "main": "sdk/index.js",
  "bin": {
    "xrp-genie": "./cli/bin/xrp-genie"
  },
  "scripts": {
    "build": "npm run build:sdk && npm run build:cli",
